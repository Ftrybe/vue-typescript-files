{
	"name": "vue-typescript-file",
	"displayName": "vue typescript files",
	"description": "right-click generate vue typescript files",
	"version": "2.0.0",
	"icon": "images/icon.png",
	"publisher": "ftrybe",
	"author": {
		"name": "cb Fan"
	},
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Other",
		"Programming Languages",
		"Snippets"
	],
	"keywords": [
		"vue",
		"typescript",
		"vue files",
		"vue typescript",
		"vue-typescript",
		"right click",
		"generate files"
	],
	"activationEvents": [
		"*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Ftrybe/vue-typescript-files"
	},
	"bugs": {
		"url": "https://github.com/Ftrybe/vue-typescript-files/issues"
	},
	"main": "./out/bin/index.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Vue-typescript-files",
			"properties": {
				"vue-ts-files.menu.component": {
					"type": "boolean",
					"default": true,
					"description": "show/hide generate component file button."
				},
				"vue-ts-files.menu.vuex": {
					"type": "boolean",
					"default": true,
					"description": "show/hide generate vuex sub module file button."
				},
				"vue-ts-files.menu.declare": {
					"type": "boolean",
					"default": true,
					"description": "show/hide generate common declare file button."
				},
				"vue-ts-files.menu.class": {
					"type": "boolean",
					"default": true,
					"description": "show/hide generate class file button."
				},
				"vue-ts-files.menu.interface": {
					"type": "boolean",
					"default": true,
					"description": "show/hide generate interface file button."
				},
				"vue-ts-files.menu.enum": {
					"type": "boolean",
					"default": true,
					"description": "show/hide generate enum file button."
				},
				"vue-ts-files.component.prefix": {
					"type": "string",
					"default": null,
					"description": "set prefix in file"
				},
				"vue-ts-files.component.suffix": {
					"type": "string",
					"default": null,
					"description": "set suffix in file"
				},
				"vue-ts-files.component.templates": {
					"type": "array",
					"default": null,
					"description": "向组件模板中添加自定义标签"
				},
				"vue-ts-files.component.styleLang": {
					"type": "string",
					"default": null,
					"description": "设置组件中默认使用的css预处理器"
				},
				"vue-ts-files.component.templateLang": {
					"type": "string",
					"default": null,
					"description": "设置组件的模板引擎"
				},
				"vue-ts-files.vuex.suffix": {
					"type": "string",
					"default": null,
					"description": "set suffix in vuex module file"
				}
			}
		},
		"commands": [
			{
				"command": "extension.addComponent",
				"title": "generate component"
			},
			{
				"command": "extension.addVuex",
				"title": "generate vuex module"
			},
			{
				"command": "extension.addDeclare",
				"title": "generate declare file"
			},
			{
				"command": "extension.addClass",
				"title": "generate class"
			},
			{
				"command": "extension.addInterface",
				"title": "generate interface"
			},
			{
				"command": "extension.addEnum",
				"title": "generate enum"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "config.vue-ts-files.menu.component",
					"command": "extension.addComponent",
					"group": "typescript support"
				},
				{
					"when": "config.vue-ts-files.menu.vuex",
					"command": "extension.addVuex",
					"group": "typescript support"
				},
				{
					"when": "config.vue-ts-files.menu.declare",
					"command": "extension.addDeclare",
					"group": "typescript support"
				},
				{
					"when": "config.vue-ts-files.menu.class",
					"command": "extension.addClass",
					"group": "typescript support basics"
				},
				{
					"when": "config.vue-ts-files.menu.interface",
					"command": "extension.addInterface",
					"group": "typescript support basics"
				},
				{
					"when": "config.vue-ts-files.menu.enum",
					"command": "extension.addEnum",
					"group": "typescript support basics"
				}
			]
		},
		"snippets": [
			{
				"language": "vue",
				"path": "./snippets/vue.json"
			},
			{
				"language": "typescript",
				"path": "./snippets/vuex.json"
			},
			{
				"language": "typescript",
				"path": "./snippets/lifecycle.json"
			}
		]
	},
	"scripts": {
		"templates": "copyfiles templates/**/*.tmpl ./out/",
		"vscode:prepublish": "npm run templates && tsc -p ./",
		"compile": "npm run templates watch",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"copyfiles": "^2.1.1",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.7.2",
		"vscode-test": "^1.0.2"
	},
	"dependencies": {
		"handlebars": "^4.5.3"
	}
}
