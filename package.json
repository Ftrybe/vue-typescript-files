{
	"name": "vue-typescript-file",
	"displayName": "vue-typescript-file",
	"description": "快速生成vue-ts组件",
	"version": "1.0.0",
	"icon": "images/icon.png",
	"publisher": "ftrybe",
	"author": {
		"name": "ftrybe"
	},
	"engines": {
		"vscode": "^1.27.0"
	},
	"categories": [
		"Other",
		"Programming Languages",
		"Snippets"
	],
	"activationEvents": [
		"*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Ftrybe/vue-typescript-files"
	},
	"bugs": {
		"url": "https://github.com/Ftrybe/vue-typescript-files/issues"
	},
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Vue ts Files menu option configuration",
			"properties": {
				"vue-ts-files.menu.component": {
					"type": "boolean",
					"default": true,
					"description": "shows or hides the menu item."
				},
				"vue-ts-files.menu.class": {
					"type": "boolean",
					"default": true,
					"description": "shows or hides the menu item."
				},
				"vue-ts-files.menu.interface": {
					"type": "boolean",
					"default": true,
					"description": "shows or hides the menu item."
				}
			}
		},
		"commands": [
			{
				"command": "extension.addVueComponent",
				"title": "Generate Component"
			},
			{
				"command": "extension.addVueClass",
				"title": "Generate Class"
			},
			{
				"command": "extension.addVueInterface",
				"title": "Generate Interface"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "config.vue-ts-files.menu.component",
					"command": "extension.addVueComponent",
					"group": "vue"
				},
				{
					"when": "config.vue-ts-files.menu.class",
					"command": "extension.addVueClass",
					"group": "ts basics"
				},
				{
					"when": "config.vue-ts-files.menu.interface",
					"command": "extension.addVueInterface",
					"group": "ts basics"
				}
			]
		}
	},
	"scripts": {
		"templates": "copyfiles templates/**/*.tmpl templates/**/*.tmpl ./out/",
		"vscode:prepublish": "npm run templates && tsc -p ./",
		"compile": "npm run templates watch",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"copyfiles": "^2.1.1",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2"
	}
}
